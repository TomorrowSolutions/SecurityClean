@page
@model LoginModel

@{
    ViewData["Title"] = SecurityClean3.Resources.General.Login.Title;
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-8 border border-1 border-secondary shadow p-3 bg-white rounded">
            <h4 class="text-center mb-3">@ViewData["Title"]</h4>
            <p class="text-center ">@SecurityClean3.Resources.General.Login.UseYourData</p>
            <hr />
            <form id="account" method="post">                
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@SecurityClean3.Resources.General.Login.LogIn</button>
                </div>                
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
