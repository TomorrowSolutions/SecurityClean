@model SecurityClean3.Models.ContractSecuredItem

@{
    ViewData["Title"] = Crud.CreateTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>@Crud.ContractSecuredItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContractId" class="control-label"></label>
                <select asp-for="ContractId" class ="form-control" asp-items="ViewBag.ContractId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SecuredItemId" class="control-label"></label>
                <select asp-for="SecuredItemId" class ="form-control" asp-items="ViewBag.SecuredItemId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="@Crud.Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Crud.Back</a>
</div>

