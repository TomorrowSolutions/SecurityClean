@model SecurityClean3.Models.ContractSecuredItem

@{
    ViewData["Title"] = Crud.DeleteTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<p class="text-danger">@ViewData["ConcurrencyErrorMessage"]</p>
<h3>@Crud.SureDelete</h3>
<div>
    <h4>@Crud.ContractSecuredItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contract)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecuredItem.Name) 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecuredItem.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecuredItem.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecuredItem.Address)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="RowVersion" />
        <input type="submit" value="@Crud.Submit" class="btn btn-danger" /> |
        <a asp-action="Index">@Crud.Back</a>
    </form>
</div>
