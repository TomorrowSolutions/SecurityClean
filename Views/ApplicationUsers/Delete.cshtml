@model SecurityClean3.Models.ApplicationUser

@{
    ViewData["Title"] = SecurityClean3.Resources.General.Crud.DeleteTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<p class="text-danger">@ViewData["ConcurrencyErrorMessage"]</p>
<h3>@SecurityClean3.Resources.General.Crud.SureDelete</h3>
<div>
    <h4>@SecurityClean3.Resources.General.Crud.ApplicationUser</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="RowVersion" />
        <input type="submit" value="@SecurityClean3.Resources.General.Crud.Submit" class="btn btn-danger" /> |
        <a asp-action="Index">@SecurityClean3.Resources.General.Crud.Back</a>
    </form>
</div>

