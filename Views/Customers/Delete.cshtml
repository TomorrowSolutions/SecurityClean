@model SecurityClean3.Models.Customer

@{
    ViewData["Title"] = Crud.DeleteTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<p class="text-danger">@ViewData["ConcurrencyErrorMessage"]</p>
<h3>@Crud.SureDelete</h3>
<div>
    <h4>@Crud.Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LegalAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LegalAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Inn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Inn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bank)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bank)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bik)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CorrespondentAccount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CorrespondentAccount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContactPerson)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContactPerson)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="RowVersion" />
        <input type="submit" value="@Crud.Submit" class="btn btn-danger" /> |
        <a asp-action="Index">@Crud.Back</a>
    </form>
</div>
